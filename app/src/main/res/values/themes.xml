<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NiramaiAssignment" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/royalBlue</item>
        <item name="colorPrimaryVariant">@color/royalBlueVar</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <item name="windowActionBar">false</item>
        <!-- Customize your theme here. -->
        <item name="textAppearanceBody2">@style/TextAppearance.App.Body2</item>
        <item name="chipStyle">@style/Widget.App.Chip</item>
        <item name="searchViewStyle">@style/AppTheme.SearchView</item>
    </style>

    <style name="Widget.App.Chip" parent="Widget.MaterialComponents.Chip.Entry">
        <item name="chipIconTint">@color/royalBlue</item>
        <item name="chipBackgroundColor">@color/checked_background</item>
        <item name="chipStrokeWidth">2dp</item>
        <item name="android:textColor">@color/checked_text</item>
        <item name="chipStrokeColor">@color/royalBlue</item>
        <item name="checkedIconVisible">false</item>
        <item name="closeIconEnabled">false</item>
        <item name="closeIconVisible">false</item>
        <item name="checkedIconEnabled">false</item>
        <item name="checkedIcon">@null</item>
        <item name="shapeAppearanceOverlay">@null</item>
    </style>

    <style name="AppTheme.SearchView" parent="Widget.AppCompat.SearchView">
        <item name="searchIcon">@null</item>
        <item name="closeIcon">@null</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="TextAppearance.App.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="fontFamily">@font/ibm_plex_sans</item>
        <item name="android:fontFamily">@font/ibm_plex_sans</item>
    </style>
</resources>